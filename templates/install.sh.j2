#!/usr/bin/env bash
#
# Custom coolify installer
#
# {{ coolify_data_volume }}
#
#################

if [ ! -f "{{ coolify_app_volume }}/.env" ]; then
    echo '
####################################
#### Missing env file required in process #####
####################################'
    exit 1
fi

buildCoolify() {
    cd {{ coolify_app_volume }}
    docker build --label coolify-reserve=true -t coolify -f {{ coolify_data_volume }}/Dockerfile .
    cd {{ coolify_data_volume }}

    if [ $? -ne 0 ]; then
        echo '
####################################
#### Ooops something not okay! #####
####################################'
        exit 1
    fi
}

deploy() {
    docker stack deploy -c docker-compose.yml coollabs-coolify
}

source {{ coolify_app_volume }}/.env
docker swarm init --advertise-addr '{{ coolify_swarm_addr }}' || true
docker network create ${DOCKER_NETWORK} --driver overlay || true

case "$1" in
    "all")
       buildCoolify
       echo '
#################################
#### Rebuilding everything. #####
#################################'
        docker stack rm coollabs-coolify
        deploy
    ;;
    "coolify")
       buildCoolify
       echo '
##############################
#### Rebuilding Coolify. #####
##############################'
        docker service rm coollabs-coolify_coolify
        deploy
    ;;
    "proxy")
       echo '
############################
#### Rebuilding Proxy. #####
############################'
        docker service rm coollabs-coolify_proxy
        deploy
    ;;
    "mongodb")
       echo '
############################
#### Rebuilding Db. #####
############################'
        docker service rm coollabs-coolify_mongodb
        deploy
    ;;
    "upgrade-phase-1")
        buildCoolify
        echo '
################################
#### Upgrading Coolify P1. #####
################################'
    ;;
    "upgrade-phase-2")
        echo '
################################
#### Upgrading Coolify P2. #####
################################'
        docker service rm coollabs-coolify_coolify
        deploy
    ;;
    *)
        exit 1
     ;;
esac
