{{ ansible_managed | comment }}

####################################
# Domain where your Coolify instance will be available and reachable.
# It's the same as you set in Github OAuth App and Github App as <domain>.
DOMAIN={{ _coolify_env.DOMAIN }}
## Let's Encrypt contact email required
EMAIL={{ _coolify_env.EMAIL }}

# JWT Token Sign Key for logging you in to Coolify's frontend
JWT_SIGN_KEY={{ _coolify_env.JWT_SIGN_KEY }}
# Encryption key for SECRETS - do NOT share it with others!
SECRETS_ENCRYPTION_KEY={{ _coolify_env.SECRETS_ENCRYPTION_KEY }}

# Docker Engine
DOCKER_ENGINE=/var/run/docker.sock
# Docker network to use internally between the proxy and your apps
DOCKER_NETWORK={{ _coolify_env.DOCKER_NETWORK }}

# Mongodb
# Values in case if you are using our Mongodb installation - CHANGE user and password fields!
MONGODB_HOST={{ _coolify_env.MONGODB_HOST }}
MONGODB_PORT={{ _coolify_env.MONGODB_PORT | d(27017) }}
MONGODB_USERNAME={{ _coolify_env.MONGODB_USERNAME }}
MONGODB_PASSWORD_NON_ENC="{{ _coolify_env.MONGODB_PASSWORD }}"
MONGODB_PASSWORD={{ _coolify_env.MONGODB_PASSWORD | urlencode() }}
MONGODB_DB=coolLabs-prod

# Frontend only variables
VITE_GITHUB_APP_CLIENTID="{{ _coolify_env.VITE_GITHUB_APP_CLIENTID }}"
VITE_GITHUB_APP_NAME="{{ _coolify_env.VITE_GITHUB_APP_NAME }}"

# Github OAuth & App secrets and private key - you can get it from Github.
GITHUB_APP_CLIENT_SECRET="{{ _coolify_env.GITHUB_APP_CLIENT_SECRET }}"
GITHUP_APP_WEBHOOK_SECRET="{{ _coolify_env.GITHUP_APP_WEBHOOK_SECRET | d('') }}"

# It should look like this. Newlines breaks with '\n'
GITHUB_APP_PRIVATE_KEY="{{ _coolify_env.GITHUB_APP_PRIVATE_KEY.encode("unicode_escape").decode("utf-8") | d('') }}"
